{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6"],
    "sourceMap": true,
    "outDir": "build",
    "rootDir": "src",
    "removeComments": true,
    "preserveConstEnums": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@types": ["types"],
      "@config": ["config"],
      "@middleware": ["middleware"],
      "@model": ["model"],
      "@api": ["routes/api"],
      "@controllers/*": ["controllers/*"],
      "@database": ["services/database"],
      "@express": ["services/express"],
      "@logger": ["services/logger"],
      "@socket": ["services/socket"],
      "@passport": ["services/passport"],
      "@email": ["services/email"],
      "@multer": ["services/multer"],
      "@utils": ["utils"],
      "@messages": ["utils/messages"],
      "@validation": ["utils/validation"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
